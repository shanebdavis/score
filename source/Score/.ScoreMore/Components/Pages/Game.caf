import &ArtSuite, &Widgets

class Games extends FluxComponent
  @subscriptions
    :game
    playersInGame:
      model: :gamePlayersByGameId
      key: ({game}) -> game.id

  render: ->
    &Page
      title: "" Game of #{@game.gameType.name} - started #{formatDate (toDate @game.createdAt), "h:mmtt"}

      array gamePlayer in @playersInGame
        {player, score} = gamePlayer
        Button text: "#{score} #{player.name}", action: null
