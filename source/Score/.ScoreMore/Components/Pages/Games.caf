import &ArtSuite, &Widgets

class Games extends FluxComponent
  @subscriptions :allGames.games

  showGame: (event, {game}) ->
    @models.navState.pushGamePage {game}

  render: ->
    &Page
      title: :Games

      array game in @games
        Button
          key: game.id
          text: game.gameType.name
          game: game
          action: @showGame

      Button text: "New Game" action: @models.navState.pushNewGamePage, secondary: true
